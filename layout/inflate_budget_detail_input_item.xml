<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:paddingLeft="10dp"
    android:paddingTop="5dp"
    android:paddingRight="10dp"
    android:layout_height="wrap_content">

    <EditText
        android:id="@+id/et_title"
        android:hint="Title"
        android:paddingLeft="10dp"
        android:textSize="@dimen/d_cell_txt_size"
        android:background="@drawable/tv_edittext_bg"
        android:layout_width="match_parent"
        android:layout_height="@dimen/d_bdit_input_et" />
    <LinearLayout
        android:id="@+id/rl_item"
        android:layout_below="@+id/et_title"
        android:layout_width="match_parent"
        android:orientation="vertical"
        android:layout_height="wrap_content">
        <EditText

            android:id="@+id/et_desc"
            android:hint="Description"
            android:layout_marginTop="5dp"
            android:background="@drawable/tv_edittext_bg"
            android:paddingLeft="10dp"
            android:textSize="@dimen/d_cell_txt_size"
            android:layout_width="match_parent"
            android:layout_height="@dimen/d_bdit_input_et" />
        <LinearLayout
            android:layout_below="@+id/et_desc"
            android:id="@+id/ll_option1"
            android:layout_marginTop="10dp"
            android:layout_width="match_parent"
            android:orientation="horizontal"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_height="@dimen/d_ibdii_option_height">
            <RelativeLayout
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="match_parent">
                <TextView
                    android:id="@+id/tv_sq_ft"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/d_bdit_input_et"
                    android:background="@color/color_semi_black"
                    android:text="Sq.Ft."
                    android:textSize="@dimen/d_cell_txt_size"
                    android:gravity="center"
                    android:textColor="@color/blue"
                    />
                <EditText
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/d_bdit_input_et"
                    android:layout_marginTop="10dp"
                    android:paddingLeft="5dp"
                    android:paddingRight="5dp"
                    android:inputType="number"
                    android:textSize="@dimen/d_cell_txt_size"
                    android:layout_below="@+id/tv_sq_ft"
                    android:id="@+id/et_sq_ft"
                    android:background="@drawable/tv_edittext_bg"
                    />

            </RelativeLayout>
            <RelativeLayout
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_marginLeft="10dp"
                android:layout_height="match_parent">
                <TextView
                    android:id="@+id/tv_rate"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/d_bdit_input_et"
                    android:background="@color/color_semi_black"
                    android:text="Rate"
                    android:textSize="@dimen/d_cell_txt_size"
                    android:gravity="center"
                    android:textColor="@color/blue"/>
                <EditText
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/d_bdit_input_et"
                    android:layout_below="@+id/tv_rate"
                    android:id="@+id/et_rate"
                    android:paddingLeft="5dp"
                    android:textSize="@dimen/d_cell_txt_size"
                    android:paddingRight="5dp"
                    android:inputType="number"
                    android:layout_marginTop="10dp"
                    android:background="@drawable/tv_edittext_bg"
                    />
            </RelativeLayout>
            <RelativeLayout
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_marginLeft="10dp"
                android:layout_height="match_parent">
                <TextView
                    android:id="@+id/tv_budget"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/d_bdit_input_et"
                    android:gravity="center"
                    android:background="@color/color_semi_black"
                    android:text="Budget"
                    android:textSize="@dimen/d_cell_txt_size"
                    android:textColor="@color/blue"
                    />
                <EditText
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/d_bdit_input_et"
                    android:layout_below="@+id/tv_budget"
                    android:id="@+id/et_budget"
                    android:layout_marginTop="10dp"
                    android:textSize="@dimen/d_cell_txt_size"
                    android:paddingLeft="5dp"
                    android:paddingRight="5dp"
                    android:inputType="number"

                    android:background="@drawable/tv_edittext_bg"
                    />

            </RelativeLayout>
            <RelativeLayout
                android:layout_width="0dp"
                android:layout_weight="1"
                android:id="@+id/rl_month_to_pay"
                android:layout_marginLeft="10dp"
                android:layout_height="match_parent">
                <TextView
                    android:id="@+id/tv_mon_to_pay"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/d_bdit_input_et"
                    android:gravity="center"
                    android:textSize="@dimen/d_mon_to_pay_ts"
                    android:background="@color/color_semi_black"
                    android:text="Month to\nPay"
                    android:textColor="@color/blue"
                    />
                <RelativeLayout
                    android:id="@+id/rl_months_complete_sales"
                    android:layout_width="match_parent"
                    android:layout_marginTop="10dp"
                    android:layout_below="@+id/tv_mon_to_pay"
                    android:background="@drawable/spinner_bg"
                    android:layout_height="@dimen/d_bdit_input_et">
                    <Spinner
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/d_bdit_input_et"
                        android:id="@+id/sp_month_to_pay"
                        android:paddingLeft="5dp"
                        android:paddingRight="5dp"
                        android:inputType="number"
                        />
                </RelativeLayout>


            </RelativeLayout>

        </LinearLayout>

        <LinearLayout
            android:id="@+id/ll_option2"
            android:layout_below="@+id/ll_option1"
            android:layout_width="match_parent"
            android:orientation="horizontal"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="5dp"
            android:layout_marginRight="10dp"
            android:layout_height="@dimen/d_ibdii_option_height">
            <RelativeLayout
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="match_parent">
                <TextView
                    android:id="@+id/tv_bid1"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/d_bdit_input_et"
                    android:background="@color/color_semi_black"
                    android:text="Bid 1"
                    android:textSize="@dimen/d_cell_txt_size"
                    android:gravity="center"
                    android:textColor="@color/blue"
                    />
                <EditText
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/d_bdit_input_et"
                    android:layout_marginTop="10dp"
                    android:layout_below="@+id/tv_bid1"
                    android:id="@+id/et_bid1"
                    android:paddingLeft="5dp"
                    android:paddingRight="5dp"
                    android:textSize="@dimen/d_cell_txt_size"
                    android:inputType="numberDecimal"
                    android:background="@drawable/tv_edittext_bg"
                    />

            </RelativeLayout>
            <RelativeLayout
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_marginLeft="10dp"
                android:layout_height="match_parent">
                <TextView
                    android:id="@+id/tv_bid2"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/d_bdit_input_et"
                    android:background="@color/color_semi_black"
                    android:text="Bid 2"
                    android:gravity="center"
                    android:textSize="@dimen/d_cell_txt_size"
                    android:textColor="@color/blue"
                    />

                <EditText
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/d_bdit_input_et"
                    android:layout_marginTop="10dp"
                    android:paddingLeft="5dp"
                    android:paddingRight="5dp"
                    android:textSize="@dimen/d_cell_txt_size"
                    android:inputType="numberDecimal"
                    android:layout_below="@+id/tv_bid2"
                    android:id="@+id/et_bid2"
                    android:background="@drawable/tv_edittext_bg"
                    />

            </RelativeLayout>
            <RelativeLayout
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_marginLeft="10dp"
                android:layout_height="match_parent">
                <TextView
                    android:id="@+id/tv_bid3"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/d_bdit_input_et"
                    android:gravity="center"
                    android:background="@color/color_semi_black"
                    android:text="Bid 3"
                    android:textSize="@dimen/d_cell_txt_size"
                    android:textColor="@color/blue"
                    />
                <EditText
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/d_bdit_input_et"
                    android:layout_marginTop="10dp"
                    android:paddingLeft="5dp"
                    android:paddingRight="5dp"
                    android:textSize="@dimen/d_cell_txt_size"
                    android:inputType="numberDecimal"
                    android:layout_below="@+id/tv_bid3"
                    android:id="@+id/et_bid3"
                    android:background="@drawable/tv_edittext_bg"
                    />

            </RelativeLayout>

        </LinearLayout>
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginTop="5dp"
            android:layout_below="@+id/ll_option2"
            android:layout_marginBottom="5dp"
            android:background="@color/blue"
            />
    </LinearLayout>
    <LinearLayout
        android:id="@+id/ll_add_item"
        android:layout_width="match_parent"
        android:orientation="vertical"
        android:visibility="gone"
        android:layout_height="wrap_content">
        <TextView
            android:id="@+id/tv_add_item"
            android:paddingLeft="10dp"
            android:text="+ Add item"
            android:gravity="center_vertical"
            android:textColor="@color/blue"
            android:textSize="@dimen/d_popup_text_size"
            android:layout_width="match_parent"
            android:layout_height="@dimen/d_bdit_input_et" />
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginTop="2dp"
            android:layout_marginBottom="4dp"
            android:background="@color/blue"
            />
    </LinearLayout>

</LinearLayout>