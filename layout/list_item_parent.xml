<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="@dimen/d_fs_cell_height"
    android:layout_marginTop="1dp"
    android:layout_marginBottom="1dp"
    android:background="@color/blue"
    android:orientation="horizontal"
    >

        <TextView android:id="@+id/tv_parent_tv"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center_vertical"
            android:layout_weight="1"
            android:textColor="@color/white"
            android:text="dfsd"
            android:textSize="@dimen/d_popup_text_size"
            android:paddingLeft="10dp"
            android:textStyle="bold"/>

        <ImageView android:id="@+id/iv_arrow"
            android:layout_width="@dimen/d_arrow_wh"
            android:layout_height="@dimen/d_arrow_wh"
            android:layout_marginRight="5dp"
            android:layout_gravity="center_vertical"
            android:src="@drawable/selector_arrow_down"/>
</LinearLayout>
