<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/main_bg"
    android:gravity="center_horizontal"
    android:orientation="vertical">

    <LinearLayout
        android:id="@+id/ll_top_view"
        android:layout_width="wrap_content"
        android:layout_height="@dimen/d_lm_header_height"
        android:layout_marginTop="20dp"
        android:layout_centerHorizontal="true"
        android:gravity="center_horizontal"
        android:orientation="vertical">


        <ImageView
            android:id="@+id/iv_userimage"
            android:layout_width="@dimen/d_left_menu_img_hw"
            android:layout_height="@dimen/d_left_menu_img_hw"
            android:src="@drawable/default_user"
            android:scaleType="fitXY"
            />

        <TextView
            android:id="@+id/tv_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10sp"
            android:text="Rehab App"
            android:textColor="@color/white"
            android:textSize="@dimen/d_input_text_size"
            />
    </LinearLayout>
    <TableLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/ll_top_view"
        android:orientation="horizontal"
        android:stretchColumns="2"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="5dp"
        android:layout_marginRight="5dp"
        android:padding="5dip"
        >
        <TableRow  android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <ImageView
                android:id="@+id/iv_quick_calc"
                android:layout_height="@dimen/d_left_menu_height"
                android:scaleType="centerInside"
                android:src="@drawable/selector_quick_calc"
                android:layout_width="0dp"
                android:padding="@dimen/d_lm_padding"
                android:layout_weight="1"/>

            <View
                android:layout_height="@dimen/d_left_menu_height"
                android:layout_width="0dp"
                android:layout_weight="0.01"
                android:background="@color/red"/>

            <ImageView
                android:id="@+id/iv_new_deal"
                android:layout_height="@dimen/d_left_menu_height"
                android:scaleType="centerInside"
                android:src="@drawable/selector_new_deal"
                android:layout_width="0dp"
                android:padding="@dimen/d_lm_padding"
                android:layout_weight="1"/>
        </TableRow>
        <TableRow android:layout_width="match_parent" android:layout_height="1dp">
            <View android:layout_height="1dp" android:layout_width="0dp" android:layout_weight="0.01" android:background="@color/red"/>
        </TableRow>
        <TableRow  android:layout_width="match_parent"
            android:layout_height="200dp">
            <ImageView  android:id="@+id/iv_save_deal" android:padding="@dimen/d_lm_padding" android:layout_height="@dimen/d_left_menu_height"  android:scaleType="centerInside" android:src="@drawable/selector_save_deal" android:layout_width="0dp" android:layout_weight="1"/>
            <View android:layout_height="@dimen/d_left_menu_height" android:layout_width="0dp" android:layout_weight="0.01" android:background="@color/red"/>
            <RelativeLayout  android:padding="@dimen/d_lm_padding" android:id="@+id/tv_compare" android:layout_height="@dimen/d_left_menu_height"  android:layout_width="0dp"
                android:layout_weight="1">
                <TextView
                    android:id="@+id/tv_icon"
                    android:layout_width="wrap_content"
                    android:text="*"
                    android:layout_marginTop="@dimen/d_lm_star_margintop"
                    android:textSize="@dimen/d_lm_star_ts"
                    android:layout_centerHorizontal="true"
                    android:textColor="#A5A4B9"
                    android:layout_height="wrap_content" />
                <TextView  android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="#A5A4B9"
                    android:gravity="center"
                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="@dimen/d_lm_star_title_mt"
                    android:textSize="@dimen/d_lm_star_title_ts"
                    android:text="Comparison"/>
            </RelativeLayout>

            <ImageView  android:id="@+id/ic_plans"  android:visibility="gone" android:layout_height="@dimen/d_left_menu_height" android:scaleType="centerInside" android:src="@drawable/selector_plans" android:layout_width="0dp" android:layout_weight="1"/>
        </TableRow>
        <TableRow android:layout_width="match_parent" android:layout_height="1dp">
            <View android:layout_height="1dp" android:layout_width="0dp" android:layout_weight="0.01" android:background="@color/red"/>
        </TableRow>
        <TableRow  android:layout_width="match_parent"
            android:layout_height="200dp">
            <ImageView android:padding="@dimen/d_lm_padding" android:id="@+id/iv_tutorial" android:layout_height="@dimen/d_left_menu_height"  android:scaleType="centerInside" android:src="@drawable/selector_tutorial" android:layout_width="0dp" android:layout_weight="1"/>

            <View android:layout_height="@dimen/d_left_menu_height" android:layout_width="0dp" android:layout_weight="0.01" android:background="@color/red"/>
            <ImageView android:padding="@dimen/d_lm_padding" android:id="@+id/iv_contact_us" android:layout_height="@dimen/d_left_menu_height" android:scaleType="centerInside" android:src="@drawable/selector_contact_us" android:layout_width="0dp" android:layout_weight="1"/>

        </TableRow>
        <TableRow android:layout_width="match_parent" android:layout_height="1dp">
            <View android:layout_height="1dp" android:layout_width="0dp" android:layout_weight="0.01" android:background="@color/red"/>
        </TableRow>
        <TableRow  android:layout_width="match_parent"
            android:layout_height="200dp">
            <ImageView android:padding="@dimen/d_lm_padding" android:id="@+id/iv_about_us" android:layout_height="@dimen/d_left_menu_height"  android:scaleType="centerInside" android:src="@drawable/selector_about_us" android:layout_width="0dp" android:layout_weight="1"/>
            <View android:layout_height="@dimen/d_left_menu_height" android:layout_width="0dp" android:layout_weight="0.01" android:background="@color/red"/>
            <ImageView android:padding="@dimen/d_lm_padding" android:id="@+id/iv_settings" android:layout_height="@dimen/d_left_menu_height" android:scaleType="centerInside" android:src="@drawable/selector_settings" android:layout_width="0dp" android:layout_weight="1"/>
        </TableRow>
    </TableLayout>


</RelativeLayout>
