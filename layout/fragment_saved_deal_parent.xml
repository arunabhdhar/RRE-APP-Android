<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">
    <LinearLayout
        android:layout_width="match_parent"
        android:background="@color/blue"
        android:orientation="horizontal"
        android:layout_height="@dimen/d_nd_header_height">
        <RelativeLayout
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="match_parent">

            <TextView
                android:id="@+id/tv_active"
                android:layout_width="@dimen/d_sdp_tv_width"
                android:text="ACTIVE"
                android:layout_centerHorizontal="true"
                android:textColor="@color/white"
                android:gravity="center"
                android:textSize="@dimen/d_popup_text_size"
                android:layout_centerVertical="true"
                android:layout_height="@dimen/d_circle_wh" />
            <View
                android:id="@+id/v_active"
                android:layout_below="@+id/tv_active"
                android:layout_width="@dimen/d_sdp_tv_width"
                android:layout_centerHorizontal="true"
                android:background="@color/red"
                android:layout_height="2dp"/>
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="match_parent">
            <TextView
                android:id="@+id/tv_inactive"
                android:layout_width="@dimen/d_sdp_tv_width"
                android:text="INACTIVE"
                android:layout_centerHorizontal="true"
                android:textColor="@color/white"
                android:gravity="center"
                android:textSize="@dimen/d_popup_text_size"
                android:layout_centerVertical="true"
                android:layout_height="@dimen/d_circle_wh" />
            <View
                android:id="@+id/v_inactive"
                android:layout_below="@+id/tv_inactive"
                android:layout_width="@dimen/d_sdp_tv_width"
                android:layout_centerHorizontal="true"
                android:background="@color/red"
                android:visibility="gone"
                android:layout_height="2dp"/>
        </RelativeLayout>


    </LinearLayout>
    <android.support.v4.view.ViewPager
        android:id="@+id/vp_fragments"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

    </android.support.v4.view.ViewPager>
</LinearLayout>