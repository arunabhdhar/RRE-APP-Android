<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">
    <RelativeLayout
        android:layout_width="match_parent"
        android:background="@color/blue"
        android:paddingLeft="@dimen/d_margin_left"
        android:paddingRight="@dimen/d_margin_left"
        android:layout_height="@dimen/d_nd_header_height">
        <View
            android:layout_width="match_parent"
            android:layout_centerVertical="true"
            android:background="@color/blue_900"
            android:layout_height="1dp"/>
        <TextView
            android:id="@+id/tv_first_fragment"
            android:layout_width="@dimen/d_circle_wh"
            android:text="1"
            android:textColor="@color/white"
            android:gravity="center"
            android:background="@drawable/sel_indicator"
            android:textSize="@dimen/d_popup_text_size"
            android:layout_centerVertical="true"
            android:layout_height="@dimen/d_circle_wh" />

        <TextView
            android:id="@+id/tv_second_fragment"
            android:layout_width="@dimen/d_circle_wh"
            android:text="2"
            android:textColor="@color/white"
            android:gravity="center"
            android:layout_centerInParent="true"
            android:background="@drawable/sel_indicator"
            android:textSize="@dimen/d_popup_text_size"
            android:layout_centerVertical="true"
            android:layout_height="@dimen/d_circle_wh" />
        <TextView
            android:id="@+id/tv_third_fragment"
            android:layout_width="@dimen/d_circle_wh"
            android:text="3"
            android:background="@drawable/sel_indicator"
            android:textColor="@color/white"
            android:gravity="center"
            android:textSize="@dimen/d_popup_text_size"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_height="@dimen/d_circle_wh" />
    </RelativeLayout>
    <android.support.v4.view.ViewPager
        android:id="@+id/vp_fragments"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

    </android.support.v4.view.ViewPager>
</LinearLayout>