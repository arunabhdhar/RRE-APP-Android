<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/white">

        <android.support.v4.widget.DrawerLayout
            android:id="@+id/drawer_layout"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:fitsSystemWindows="true">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <android.support.v7.widget.Toolbar
                    android:id="@+id/toolbar"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingTop="@dimen/d_toolbar_padding_tb"
                    android:paddingBottom="@dimen/d_toolbar_padding_tb"
                    android:background="@color/blue">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Quick Calculator"
                        android:textColor="@color/white"
                        android:textSize="@dimen/d_home_title_text_size"
                        android:inputType="textCapCharacters"
                        android:layout_gravity="center"
                        android:id="@+id/toolbar_title" />
                </android.support.v7.widget.Toolbar>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_below="@+id/toolbar"
                    android:orientation="horizontal"
                    android:weightSum="1">

                    <FrameLayout
                        android:id="@+id/container"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent" >

                        <TextView
                            android:id="@+id/tv_message"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Under Development"
                            android:layout_gravity="center"
                            android:visibility="gone"
                            android:textSize="@dimen/d_cell_input_textsize"
                            android:textColor="@color/black" />
                        </FrameLayout>
                </LinearLayout>



            </RelativeLayout>

            <FrameLayout
                android:id="@+id/navigation_drawer"
                android:layout_width="@dimen/d_navigation_drawer_width"
                android:layout_height="match_parent"
                android:layout_gravity="start"
                android:background="@drawable/main_bg"
                android:fitsSystemWindows="true">

                <ListView
                    android:id="@+id/navigation_drawer_menu"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginTop="@dimen/d_margin_left"
                    android:choiceMode="singleChoice"
                    android:divider="@null"
                    android:dividerHeight="0dp" />

                <View
                    android:id="@+id/navigation_drawer_scrim"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:background="#33000000" />
            </FrameLayout>

        </android.support.v4.widget.DrawerLayout>
    </RelativeLayout>
</RelativeLayout>
