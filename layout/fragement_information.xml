<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">
    <LinearLayout
        android:layout_width="match_parent"
        android:paddingLeft="@dimen/d_fi_plr"
        android:paddingRight="@dimen/d_fi_plr"
        android:orientation="vertical"
        android:layout_height="match_parent">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/d_f_info_height">
            <TextView
                android:layout_width="wrap_content"
                android:text="Property Title"
                android:textSize="@dimen/d_popup_text_size"
                android:textColor="@color/blue"
                android:gravity="center_vertical"
                android:layout_height="match_parent" />
            <TextView
                android:id="@+id/tv_property_title"
                android:layout_alignParentRight="true"
                android:layout_width="wrap_content"
                android:textSize="@dimen/d_popup_text_size"
                android:textColor="@color/blue"
                android:gravity="center_vertical"
                android:layout_height="match_parent" />
        </RelativeLayout>
        <View
            android:layout_width="match_parent"
            android:background="@color/blue"
            android:layout_height="1dp"/>
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/d_f_info_height">
            <TextView
                android:layout_width="wrap_content"
                android:text="Location"
                android:textSize="@dimen/d_popup_text_size"
                android:textColor="@color/blue"
                android:gravity="center_vertical"
                android:layout_height="match_parent" />
            <TextView
                android:id="@+id/tv_location"
                android:layout_alignParentRight="true"
                android:layout_width="wrap_content"
                android:textSize="@dimen/d_popup_text_size"
                android:textColor="@color/blue"
                android:gravity="center_vertical"
                android:layout_height="match_parent" />
        </RelativeLayout>
        <View
            android:layout_width="match_parent"
            android:background="@color/blue"
            android:layout_height="1dp"/>
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/d_f_info_height">
            <TextView
                android:layout_width="wrap_content"
                android:text="Area"
                android:textSize="@dimen/d_popup_text_size"
                android:textColor="@color/blue"
                android:gravity="center_vertical"
                android:layout_height="match_parent" />
            <TextView
                android:id="@+id/tv_area"
                android:layout_alignParentRight="true"
                android:layout_width="wrap_content"
                android:textSize="@dimen/d_popup_text_size"
                android:textColor="@color/blue"
                android:gravity="center_vertical"
                android:layout_height="match_parent" />
        </RelativeLayout>
        <View
            android:layout_width="match_parent"
            android:background="@color/blue"
            android:layout_height="1dp"/>
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/d_f_info_height">
            <TextView
                android:layout_width="wrap_content"
                android:text="Agent Name"
                android:textSize="@dimen/d_popup_text_size"
                android:textColor="@color/blue"
                android:gravity="center_vertical"
                android:layout_height="match_parent" />
            <TextView
                android:id="@+id/tv_agent_name"
                android:layout_alignParentRight="true"
                android:layout_width="wrap_content"
                android:textSize="@dimen/d_popup_text_size"
                android:textColor="@color/blue"
                android:gravity="center_vertical"
                android:layout_height="match_parent" />
        </RelativeLayout>
        <View
            android:layout_width="match_parent"
            android:background="@color/blue"
            android:layout_height="1dp"/>
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/d_f_info_height">
            <TextView
                android:layout_width="wrap_content"
                android:text="Number of Bedroom"
                android:textSize="@dimen/d_popup_text_size"
                android:textColor="@color/blue"
                android:gravity="center_vertical"
                android:layout_height="match_parent" />
            <TextView
                android:id="@+id/tv_no_of_bedroom"
                android:layout_alignParentRight="true"
                android:layout_width="wrap_content"
                android:textSize="@dimen/d_popup_text_size"
                android:textColor="@color/blue"
                android:gravity="center_vertical"
                android:layout_height="match_parent" />
        </RelativeLayout>
        <View
            android:layout_width="match_parent"
            android:background="@color/blue"
            android:layout_height="1dp"/>
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/d_f_info_height">
            <TextView
                android:layout_width="wrap_content"
                android:text="Number of Bathroom"
                android:textSize="@dimen/d_popup_text_size"
                android:textColor="@color/blue"
                android:gravity="center_vertical"
                android:layout_height="match_parent" />
            <TextView
                android:id="@+id/tv_no_of_bathrrom"
                android:layout_alignParentRight="true"
                android:layout_width="wrap_content"
                android:textSize="@dimen/d_popup_text_size"
                android:textColor="@color/blue"
                android:gravity="center_vertical"
                android:layout_height="match_parent" />
        </RelativeLayout>
        <View
            android:layout_width="match_parent"
            android:background="@color/blue"
            android:layout_height="1dp"/>
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/d_f_info_height">
            <TextView
                android:layout_width="wrap_content"
                android:text="Year Of Build"
                android:textSize="@dimen/d_popup_text_size"
                android:textColor="@color/blue"
                android:gravity="center_vertical"
                android:layout_height="match_parent" />
            <TextView
                android:id="@+id/tv_year_of_build"
                android:layout_alignParentRight="true"
                android:layout_width="wrap_content"
                android:textSize="@dimen/d_popup_text_size"
                android:textColor="@color/blue"
                android:gravity="center_vertical"
                android:layout_height="match_parent" />
        </RelativeLayout>
        <View
            android:layout_width="match_parent"
            android:background="@color/blue"
            android:layout_height="1dp"/>

    </LinearLayout>
</ScrollView>