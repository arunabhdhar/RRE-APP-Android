<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:padding="15dp"
    android:layout_height="match_parent">
    <RelativeLayout
        android:layout_width="match_parent"
        android:gravity="center_vertical"
        android:layout_height="@dimen/d_fs_cell_height">

        <TextView
            android:id="@+id/tv_cost"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Cost"
            android:textSize="@dimen/d_input_text_size"
            android:textColor="@color/red" />

        <TextView
            android:id="@+id/tv_maximum_offers"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Maximum Offers: "
            android:gravity="right"
            android:textSize="@dimen/d_input_text_size"
            android:textStyle="bold"
            android:layout_toRightOf="@+id/tv_cost"
            android:layout_toLeftOf="@+id/tv_maximum_offers_val"
            android:textColor="@color/blue" />

        <TextView
            android:id="@+id/tv_maximum_offers_val"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="0"
            android:layout_alignParentRight="true"
            android:textSize="@dimen/d_input_text_size"
            android:textStyle="bold"
            android:textColor="@color/blue" />

    </RelativeLayout>
    <View
        android:layout_marginTop="5dp"
        android:layout_width="match_parent"
        android:layout_height="1dp" android:background="@color/c_seperator" />

    <ScrollView
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        >

        <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
            android:orientation="vertical" android:layout_width="match_parent"
            android:padding="15dp"
            android:layout_height="match_parent">




            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="After Repair Value(AVR)"
                android:layout_marginTop="15dp"
                android:textSize="@dimen/d_popup_text_size"
                android:textStyle="bold"
                android:textColor="@color/blue" />

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_marginTop="5dp"
                android:layout_height="@dimen/d_fs_cell_height">
                <org.rehab.app.ui.views.CustomEditText
                    android:id="@+id/ed_avr"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/d_fs_cell_height"
                    android:hint="0"
                    android:inputType="numberDecimal"
                    android:background="@android:color/transparent"
                    android:textSize="@dimen/d_popup_text_size"
                    />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_alignParentRight="true"
                    android:gravity="center_vertical"
                    android:layout_height="@dimen/d_fs_cell_height"
                    android:textSize="@dimen/d_popup_text_size"
                    android:text="$"/>
            </RelativeLayout>
            <View
                android:layout_marginTop="5dp"
                android:layout_width="match_parent"
                android:layout_height="1dp" android:background="@color/c_seperator" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Maximum Percentage AVR"
                android:layout_marginTop="15dp"
                android:textSize="@dimen/d_popup_text_size"
                android:textStyle="bold"
                android:textColor="@color/blue" />

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_marginTop="5dp"
                android:layout_height="@dimen/d_fs_cell_height">
                <org.rehab.app.ui.views.CustomEditText
                    android:id="@+id/ed_max_per_avr"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/d_fs_cell_height"
                    android:hint="0"
                    android:inputType="numberDecimal"
                    android:background="@android:color/transparent"
                    android:textSize="@dimen/d_popup_text_size"
                    />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_alignParentRight="true"
                    android:gravity="center_vertical"
                    android:textSize="@dimen/d_popup_text_size"
                    android:layout_height="@dimen/d_fs_cell_height"
                    android:text="%"/>
            </RelativeLayout>
            <View
                android:layout_marginTop="5dp"
                android:layout_width="match_parent"
                android:layout_height="1dp" android:background="@color/c_seperator" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Repairs"
                android:layout_marginTop="15dp"
                android:textSize="@dimen/d_popup_text_size"
                android:textStyle="bold"
                android:textColor="@color/blue" />

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_marginTop="5dp"
                android:layout_height="@dimen/d_fs_cell_height">
                <org.rehab.app.ui.views.CustomEditText
                    android:id="@+id/ed_repair"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/d_fs_cell_height"
                    android:hint="0"
                    android:inputType="numberDecimal"
                    android:background="@android:color/transparent"
                    android:textSize="@dimen/d_popup_text_size"
                    />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_alignParentRight="true"
                    android:gravity="center_vertical"
                    android:textSize="@dimen/d_popup_text_size"
                    android:layout_height="@dimen/d_fs_cell_height"
                    android:text="sq ft"/>
            </RelativeLayout>
            <View
                android:layout_marginTop="5dp"
                android:layout_width="match_parent"
                android:layout_height="1dp" android:background="@color/c_seperator" />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Closing Cost for Buying"
                android:layout_marginTop="15dp"
                android:textSize="@dimen/d_popup_text_size"
                android:textStyle="bold"
                android:textColor="@color/blue" />

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_marginTop="5dp"
                android:layout_height="@dimen/d_fs_cell_height">
                <org.rehab.app.ui.views.CustomEditText
                    android:id="@+id/ed_clos_cost_for_buy"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/d_fs_cell_height"
                    android:hint="0"
                    android:inputType="numberDecimal"
                    android:background="@android:color/transparent"
                    android:textSize="@dimen/d_popup_text_size"
                    />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_alignParentRight="true"
                    android:textSize="@dimen/d_popup_text_size"
                    android:gravity="center_vertical"
                    android:layout_height="@dimen/d_fs_cell_height"
                    android:text="$"/>
            </RelativeLayout>
            <View
                android:layout_marginTop="5dp"
                android:layout_width="match_parent"
                android:layout_height="1dp" android:background="@color/c_seperator" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Closing Cost for Selling"
                android:layout_marginTop="15dp"
                android:textSize="@dimen/d_popup_text_size"
                android:textStyle="bold"
                android:textColor="@color/blue" />

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_marginTop="5dp"
                android:layout_height="@dimen/d_fs_cell_height">
                <EditText
                    android:id="@+id/ed_clos_cost_for_sell"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/d_fs_cell_height"
                    android:inputType="numberDecimal"
                    android:hint="0"
                    android:background="@android:color/transparent"
                    android:textSize="@dimen/d_popup_text_size"
                    />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_alignParentRight="true"
                    android:gravity="center_vertical"
                    android:textSize="@dimen/d_popup_text_size"
                    android:layout_height="@dimen/d_fs_cell_height"
                    android:text="$"/>
            </RelativeLayout>
            <View
                android:layout_marginTop="5dp"
                android:layout_width="match_parent"
                android:layout_height="1dp" android:background="@color/c_seperator" />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Holding Cost"
                android:layout_marginTop="15dp"
                android:textSize="@dimen/d_popup_text_size"
                android:textStyle="bold"
                android:textColor="@color/blue" />

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_marginTop="5dp"
                android:layout_height="@dimen/d_fs_cell_height">
                <org.rehab.app.ui.views.CustomEditText
                    android:id="@+id/ed_holding_cost"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/d_fs_cell_height"
                    android:hint="0"
                    android:inputType="numberDecimal"
                    android:background="@android:color/transparent"
                    android:textSize="@dimen/d_popup_text_size"
                    />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_alignParentRight="true"
                    android:gravity="center_vertical"
                    android:textSize="@dimen/d_popup_text_size"
                    android:layout_height="@dimen/d_fs_cell_height"
                    android:text="$"/>
            </RelativeLayout>
            <View
                android:layout_marginTop="5dp"
                android:layout_width="match_parent"
                android:layout_height="1dp" android:background="@color/c_seperator" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Other Expenses"
                android:layout_marginTop="15dp"
                android:textSize="@dimen/d_popup_text_size"
                android:textStyle="bold"
                android:textColor="@color/blue" />

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_marginTop="5dp"
                android:layout_height="@dimen/d_fs_cell_height">
                <org.rehab.app.ui.views.CustomEditText
                    android:id="@+id/ed_other_expenses"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/d_fs_cell_height"
                    android:hint="0"
                    android:inputType="numberDecimal"
                    android:background="@android:color/transparent"
                    android:textSize="@dimen/d_popup_text_size"
                    />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_alignParentRight="true"
                    android:gravity="center_vertical"
                    android:textSize="@dimen/d_popup_text_size"
                    android:layout_height="@dimen/d_fs_cell_height"
                    android:text="$"/>
            </RelativeLayout>
            <View
                android:layout_marginTop="5dp"
                android:layout_width="match_parent"
                android:layout_height="1dp" android:background="@color/c_seperator" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Wholesale Profit"
                android:layout_marginTop="15dp"
                android:textSize="@dimen/d_popup_text_size"
                android:textStyle="bold"
                android:textColor="@color/blue" />

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_marginTop="5dp"
                android:layout_height="@dimen/d_fs_cell_height">
                <org.rehab.app.ui.views.CustomEditText
                    android:id="@+id/ed_wholesale_profit"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/d_fs_cell_height"
                    android:inputType="numberDecimal"
                    android:hint="0"
                    android:background="@android:color/transparent"
                    android:textSize="@dimen/d_popup_text_size"
                    />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_alignParentRight="true"
                    android:gravity="center_vertical"
                    android:textSize="@dimen/d_popup_text_size"
                    android:layout_height="@dimen/d_fs_cell_height"
                    android:text="$"/>
            </RelativeLayout>
            <View
                android:layout_marginTop="5dp"
                android:layout_width="match_parent"
                android:layout_height="1dp" android:background="@color/c_seperator" />
            <Button
                android:id="@+id/btn_continue"
                android:layout_width="@dimen/d_nd_button"
                android:layout_height="@dimen/d_btn_height"
                android:text="@string/txt_continue"
                android:layout_marginTop="20sp"
                android:background="@drawable/btn_green_round"
                android:layout_gravity="center_horizontal"
                android:textSize="@dimen/d_popup_text_size"
                android:textColor="@color/white" />
        </LinearLayout>
    </ScrollView>
</LinearLayout>