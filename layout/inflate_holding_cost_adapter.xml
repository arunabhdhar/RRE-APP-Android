<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <LinearLayout
        android:id="@+id/ll_option"
        android:layout_width="match_parent"
        android:orientation="horizontal"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginTop="10dp"
        android:layout_height="@dimen/d_btn_height">

        <EditText
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_below="@+id/tv_bid1"
            android:id="@+id/et_title"
            android:paddingLeft="5dp"
            android:layout_marginRight="10dp"
            android:layout_weight="3"
            android:paddingRight="5dp"
            android:textSize="@dimen/d_cell_txt_size"
            android:background="@drawable/tv_edittext_bg"
            />


        <EditText
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:paddingLeft="5dp"
            android:paddingRight="5dp"
            android:textSize="@dimen/d_cell_txt_size"
            android:inputType="numberDecimal"
            android:id="@+id/et_value"
            android:background="@drawable/tv_edittext_bg"
            />
    </LinearLayout>
    <LinearLayout
        android:id="@+id/ll_add_item"
        android:layout_width="match_parent"
        android:orientation="vertical"
        android:visibility="gone"
        android:layout_height="@dimen/d_btn_height">
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginTop="5dp"
            android:layout_marginBottom="5dp"
            android:background="@color/blue"
            />
        <TextView
            android:textColor="@color/blue"
            android:text=" + Add Item"
            android:textSize="@dimen/d_popup_text_size"
            android:id="@+id/tv_add_item"
            android:layout_marginLeft="10dp"
            android:gravity="center_vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />
    </LinearLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginTop="5dp"
        android:layout_marginBottom="5dp"
        android:background="@color/blue"
        />
</LinearLayout>