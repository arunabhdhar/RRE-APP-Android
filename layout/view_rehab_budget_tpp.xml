<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:background="@color/blue"
    android:layout_height="match_parent">
    <LinearLayout
        android:layout_width="match_parent"
        android:background="@color/white"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginBottom="10dp"
        android:orientation="vertical"
        android:layout_height="match_parent">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/d_btn_height">
            <Button
                android:id="@+id/btn_cancel"
                android:layout_width="@dimen/d_popup_button_wh"
                android:layout_margin="5dp"
                android:text="@string/as_txt_cancel"
                android:textColor="@color/white"
                android:textSize="@dimen/d_popup_text_size"
                android:background="@color/grey_500"
                android:layout_height="match_parent" />
            <TextView
                android:layout_width="match_parent"
                android:gravity="center_horizontal"
                android:textSize="@dimen/d_text_size"
                android:textColor="@color/blue"
                android:padding="10dp"
                android:textStyle="bold"
                android:text="BUDGET"
                android:layout_height="wrap_content" />
            <Button
                android:id="@+id/btn_update"
                android:layout_width="@dimen/d_popup_button_wh"
                android:text="@string/txt_update"
                android:textColor="@color/white"
                android:layout_margin="5dp"
                android:background="@color/blue"
                android:textSize="@dimen/d_popup_text_size"
                android:layout_alignParentRight="true"
                android:layout_height="match_parent" />
        </RelativeLayout>

        <View
            android:background="@color/c_seperator"
            android:layout_width="match_parent"
            android:layout_height="1dp"/>

        <RelativeLayout
            android:layout_marginTop="10dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:layout_toLeftOf="@+id/rl_budget_type"
                android:layout_width="match_parent"
                android:paddingLeft="10dp"
                android:textSize="@dimen/d_popup_text_size"
                android:textColor="@color/blue"
                android:layout_centerVertical="true"
                android:gravity="center_vertical"
                android:text="1) How do you want to enter budget?"
                android:layout_height="wrap_content" />
            <RelativeLayout
                android:id="@+id/rl_budget_type"
                android:layout_width="@dimen/d_cctpp_input_width"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:layout_alignParentRight="true"
                android:background="@drawable/spinner_bg"
                android:layout_height="@dimen/d_fs_cell_height">
                <Spinner
                    android:id="@+id/s_budget_type"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/d_fs_cell_height"
                    android:spinnerMode="dropdown" />
            </RelativeLayout>


        </RelativeLayout>

        <RelativeLayout
            android:layout_marginTop="10dp"
            android:layout_width="match_parent"
            android:layout_height="@dimen/d_fs_cell_height">
            <TextView
                android:layout_toLeftOf="@+id/rl_override"
                android:layout_width="match_parent"
                android:paddingLeft="10dp"
                android:textSize="@dimen/d_popup_text_size"
                android:textColor="@color/blue"
                android:text="2) Overide:"
                android:layout_centerVertical="true"
                android:layout_height="wrap_content" />
            <RelativeLayout
                android:id="@+id/rl_override"
                android:layout_width="@dimen/d_cctpp_input_width"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:layout_alignParentRight="true"
                android:background="@drawable/spinner_bg"
                android:layout_height="@dimen/d_fs_cell_height">
                <Spinner
                    android:id="@+id/s_override"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/d_fs_cell_height"
                    android:spinnerMode="dropdown" />
            </RelativeLayout>


        </RelativeLayout>
        <View
            android:background="@color/c_seperator"
            android:layout_width="match_parent"
            android:layout_marginTop="5dp"
            android:layout_height="1dp"/>
        <RelativeLayout
            android:id="@+id/rl_lump_sum_budget"
            android:layout_width="match_parent"
            android:visibility="gone"
            android:layout_marginTop="10dp"
            android:layout_height="@dimen/d_btn_height">
            <TextView
                android:layout_width="wrap_content"
                android:text="Lump Sum Budget:"
                android:textColor="@color/blue"
                android:paddingLeft="10dp"
                android:layout_centerVertical="true"
                android:textSize="@dimen/d_popup_text_size"
                android:layout_height="wrap_content" />
            <EditText
                android:id="@+id/et_quick_lump_sum"
                android:layout_width="@dimen/d_cctpp_input_width"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:paddingLeft="5dp"
                android:paddingRight="5dp"
                android:inputType="numberDecimal"
                android:textSize="@dimen/d_popup_text_size"
                android:layout_centerVertical="true"
                android:background="@drawable/spinner_bg"
                android:layout_alignParentRight="true"
                android:layout_height="@dimen/d_btn_height" />

        </RelativeLayout>
        <RelativeLayout
            android:id="@+id/rl_detail_input"
            android:visibility="visible"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:layout_width="wrap_content"
                android:text="Scope of Work and Budget"
                android:layout_marginTop="5dp"
                android:textSize="@dimen/d_popup_text_size"
                android:textStyle="bold"
                android:paddingLeft="5dp"
                android:layout_height="wrap_content" />
            <CheckBox
                android:id="@+id/cb_show_bid"
                android:layout_width="wrap_content"
                android:text="Show Bid"
                android:layout_marginRight="10dp"
                android:checked="true"
                android:textSize="@dimen/d_popup_text_size"
                android:layout_alignParentRight="true"
                android:layout_height="wrap_content" />
            <android.support.v7.widget.RecyclerView
                android:id="@+id/rv_items"
                android:paddingTop="5dp"
                android:layout_below="@+id/cb_show_bid"
                android:layout_above="@+id/rl_bottom_click"
                android:visibility="visible"
                android:layout_width="match_parent"
                android:layout_height="match_parent"/>
            <LinearLayout
                android:layout_width="match_parent"
                android:id="@+id/rl_bottom_click"
                android:layout_marginLeft="10dp"
                android:layout_alignParentBottom="true"
                android:orientation="horizontal"
                android:paddingTop="5dp"
                android:paddingBottom="5dp"
                android:gravity="right"
                android:layout_marginRight="10dp"
                android:weightSum="5"
                android:layout_height="@dimen/d_min_cell_height">
                <TextView
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:id="@+id/tv_bid1"
                    android:gravity="center"
                    android:textSize="@dimen/d_popup_text_size"
                    android:background="@drawable/tv_disable_bg"
                    />
                <TextView
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:layout_marginLeft="@dimen/d_rbtpp_bc_margin"
                    android:id="@+id/tv_bid2"
                    android:gravity="center"
                    android:textSize="@dimen/d_popup_text_size"
                    android:background="@drawable/tv_disable_bg"
                    />
                <TextView
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:id="@+id/tv_bid3"
                    android:textSize="@dimen/d_popup_text_size"
                    android:layout_marginLeft="@dimen/d_rbtpp_bc_margin"
                    android:gravity="center"
                    android:background="@drawable/tv_disable_bg"
                    />
                <TextView
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:layout_marginLeft="@dimen/d_rbtpp_bc_margin"
                    android:id="@+id/tv_budget"
                    android:textSize="@dimen/d_popup_text_size"
                    android:gravity="center"
                    android:background="@drawable/tv_disable_bg"
                    />

            </LinearLayout>
        </RelativeLayout>

    </LinearLayout>
</LinearLayout>